% \rubyiii{本行}{ルビ}
%   \rubyii と同じだが，ルビによって本行の文字間隔が乱されない
%   ルビの大きさは \tiny
%
\def\rubyiii#1#2{\settowidth{\moziretuhaba}{\tiny #2}%
	\settowidth{\moziretuhabaii}{#1}%
	\divide\moziretuhaba by 2%
	\divide\moziretuhabaii by 2%
	\unskip%
	\hspace{-\moziretuhaba}%
	\hspace{\moziretuhabaii}
	\unskip%
	\raisebox{.8zw}{\tiny #2}
	\unskip%
	\hspace{-\moziretuhaba}%
	\hspace{-\moziretuhabaii}
	\unskip%
	{#1}
	\unskip%
}

